<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--ListView에 띄워줄 레이아웃 (서번트아이콘, 서번트 이름, 서번트 클래스 서번트 등급-->
    <LinearLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:gravity="center">
            <ImageView
                android:id="@+id/servant_icon"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/servant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/servant_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"/>

            <LinearLayout
                android:id="@+id/grade_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/grade_star_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_servant_star"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/grade_star_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_servant_star"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/grade_star_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_servant_star"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/grade_star_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_servant_star"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/grade_star_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_servant_star"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:gravity="center">
            <ImageView
                android:id="@+id/class_icon"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>